--1 to select all the columns/rows in a table use:

SELECT * 
FROM employees;

SELECT * 
FROM departments;




--2 to select specific columns

SELECT DEPARTMENT_ID, DEPARTMENT_NAME
FROM   DEPARTMENTs;



